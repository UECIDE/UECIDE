	<target name="linux-generate-debian" depends="version-number, build" description="Build debian tree ready for packaging">
        <mkdir dir="linux/${product}-${version}-${arch}" />
        <copy todir="linux/${product}-${version}-${arch}/usr">
            <fileset dir="linux/dist/usr" />
        </copy>
        <copy todir="linux/${product}-${version}-${arch}/usr/share/${product}">
            <fileset dir="linux/work" />
        </copy>
        <chmod perm="755">
            <fileset dir="linux/${product}-${version}-${arch}/usr/share/${product}" includes="${product}" />
            <fileset dir="linux/${product}-${version}-${arch}/usr/share/${product}/tools" includes="**/*" />
            <fileset dir="linux/${product}-${version}-${arch}/usr/share/${product}/hardware/cores/pic32/tools" includes="**/*" />
            <fileset dir="linux/${product}-${version}-${arch}/usr/share/${product}/hardware/cores/pic32/compiler" includes="**/*" />
            <!--fileset dir="linux/${product}-${version}-${arch}/usr/share/${product}/hardware/cores/pic32/tools" includes="**/*" /-->
        </chmod>
        <symlink link="linux/${product}-${version}-${arch}/usr/bin/${product}" resource="/usr/share/${product}/${product}" overwrite="true" />
        <mkdir dir="linux/${product}-${version}-${arch}/DEBIAN" />
        <echo file="linux/${product}-${version}-${arch}/DEBIAN/control">
Package: ${product}
Version: ${version}
Maintainer: matt@majenko.co.uk
Architecture: ${arch}
Section: Programming
Depends: avr-libc, avrdude, binutils-avr, extra-xdg-menus, gcc-avr, libftdi1, libjna-java, librxtx-java
Description: chipKIT MPIDE Development environment

</echo>
        <exec executable="dpkg-deb" dir="linux">
